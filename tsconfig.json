{
  "compilerOptions": {
    "target": "es6",
    "types": [ "jest", "node" ],
    "module": "es2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "rootDir": ".",
    "outDir": "dist/tsc",
    "allowJs": true,
    "declaration": true
  },
  "include": ["dist/**/*.ts", "test/**/*.ts"],
  "exclude": [
    "node_modules/**/*.ts",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "resolveJsonModule": true
    }
  }
}